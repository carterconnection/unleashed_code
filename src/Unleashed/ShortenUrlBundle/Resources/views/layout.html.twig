<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
	<title>{% block title %}Shorten A Url - {% endblock %}Unleashed Technologies Code Challenge</title>
        
    {% block styles %}
    
        {% stylesheets
            '@UnleashedShortenUrlBundle/Resources/public/css/index.css'
            filter='cssrewrite'
            output = 'css/compiled/m/index.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type='text/css' />
        {% endstylesheets %}
        
        <style>
            body{
                background:url(http://w3layouts.com/demos/batman_login_form/web/images/bg.jpg) no-repeat center fixed;
				background-size: 100% 100%;
            }
        </style>
    
    {% endblock %}
        
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!--webfonts-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text.css'/>
    <!--//webfonts-->
</head>
 
<body>
	<div id="container">
		
        {% block content %}{% endblock %}
        
	</div>
    
    <div class="copy-right">
        <p><a href=""></a></p> 
    </div>
    
    {% block js %}
        <script type="application/x-javascript">
            addEventListener("load", function(){
                setTimeout(hideURLbar, 0);
            }, false);
            
            function hideURLbar(){
                window.scrollTo(0,1);
            }
        </script>
		
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
		<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% endblock %}
    
    
</body>
</html>